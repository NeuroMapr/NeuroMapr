# API Configuration
PORT=5000
NODE_ENV=development

# JWT/Auth
JWT_SECRET=your_secret_key_here

# Raindrop Smart Components
RAINDROP_API_KEY=your_raindrop_api_key
RAINDROP_SMART_INFERENCE_URL=https://api.raindrop.ai/smart-inference
RAINDROP_SMART_SQL_URL=https://api.raindrop.ai/smart-sql
RAINDROP_SMART_BUCKETS_URL=https://api.raindrop.ai/smart-buckets
RAINDROP_SMART_MEMORY_URL=https://api.raindrop.ai/smart-memory

# Vultr Managed Database (PostgreSQL)
VULTR_DB_HOST=your-db-host.vultrdb.com
VULTR_DB_PORT=16751
VULTR_DB_NAME=neuromapr_db
VULTR_DB_USER=neuromapr_admin
VULTR_DB_PASSWORD=your_secure_password
VULTR_DB_SSL=true

# Vultr Object Storage (S3-compatible)
VULTR_S3_ENDPOINT=https://ewr1.vultrobjects.com
VULTR_S3_ACCESS_KEY=your_access_key
VULTR_S3_SECRET_KEY=your_secret_key
VULTR_S3_BUCKET=neuromapr-assets
VULTR_S3_REGION=ewr1

# Vultr Valkey (Redis-compatible)
VULTR_REDIS_HOST=your-redis-host.vultrdb.com
VULTR_REDIS_PORT=16752
VULTR_REDIS_PASSWORD=your_redis_password

# Vultr Compute (Optional - for ML processing)
VULTR_COMPUTE_IP=your.compute.ip.address
VULTR_API_KEY=your_vultr_api_key

# WorkOS Authentication
WORKOS_API_KEY=your_workos_api_key
WORKOS_CLIENT_ID=your_workos_client_id

# Stripe Payment
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ElevenLabs (handled by other dev)
ELEVENLABS_API_KEY=your_elevenlabs_api_key
